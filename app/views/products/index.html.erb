<%= content_for :before do %>
  <%= render "products/nav" %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-12">
        <nav aria-label="breadcrumb ml-2">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Category A</a></li>
            <li class="breadcrumb-item active" aria-current="page">ALL PRODUCTS</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</nav>
<% end %>

<div class="container">
  <div class="row">
    <% 10.times do %>
      <div class="col-sm-3">
        <div class="card mt-5">
          <!-- <img src="" class="card-img-top" alt="..."> -->
          <!-- Div below is placeholder for image. Remove once we get real images -->
          <div style="width: 100%; height: 200px; background: #ccc" class="card-img-top"></div>
          <div class="card-body">
            <h6 class="card-title">Product Name</h6>
            <p class="cart-text">
              <strong>AED 20.99</strong>
            </p>

            <div class="input-group">
              <input type="number" class="form-control" value="1" min="1" max="1000">
              <div class="input-group-append">
                <button class="btn btn-primary">
                  <i class="fa fa-cart-plus text-light"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
