<%= content_for :before do %>
  <%= render "products/nav" %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-12">
        <nav aria-label="breadcrumb ml-2">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to @category.name, @category %></li>
            <!-- custom view helper in products_helper.rb to vew the product view breadcrumb -->
            <%= product_group_breadcrumb_li(@product_group) %> 
          </ol>
        </nav>
      </div>
    </div>
  </div>
</nav>
<% end %>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-3">
        <div class="card mt-5">
          <!-- <img src="" class="card-img-top" alt="..."> -->
          <!-- Div below is placeholder for image. Remove once we get real images -->
          <div style="width: 100%; height: 200px; background: #ccc" class="card-img-top"></div>
          <div class="card-body">
            <h6 class="card-title"><%= product.description %></h6>
            <p class="cart-text">
              <strong>AED <%= product.price_cents %></strong>
            </p>

            <div class="input-group">
              <div class="input-group-append">
                <%= form_tag cart_path(product: product.id) do %>
                  <%= number_field_tag :quantity, 1, within: 1..1000, class: 'form-control' %>
                  <%= button_tag :submit, class: "btn btn-primary" do %>
                    <i class="fa fa-cart-plus text-light"></i>
                  <% end %>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

